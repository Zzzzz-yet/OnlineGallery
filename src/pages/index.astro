<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Drone Gallery</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        margin: 0; padding: 0;
        font-family: sans-serif;
        background: #f5f5f5;
      }
      .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
        padding: 1rem;
      }
      .gallery-item {
        position: relative;
      }
      .gallery-item img {
        width: 100%;
        border-radius: 8px;
        display: block;
      }
      .gallery-item .overlay {
        position: absolute;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background: rgba(0,0,0,0);
        z-index: 10;
      }
      footer {
        text-align: center;
        padding: 1rem;
        color: #888;
        background: #fff;
      }
    </style>
  </head>
  <body>
    <div class="gallery" id="gallery"></div>
    <footer>
      Â© 2025 ZoeChow9005. All rights reserved. No unauthorized use.
    </footer>

    <script>
      window.addEventListener('DOMContentLoaded', () => {
        fetch('/media.json')
          .then(res => res.json())
          .then(media => {
            const gallery = document.getElementById('gallery');
            media.forEach(item => {
              const div = document.createElement('div');
              div.className = 'gallery-item';
              div.innerHTML = \`
                <img src="/\${item.src}" alt="\${item.alt}" draggable="false">
                <div class="overlay"></div>
              \`;
              gallery.appendChild(div);
            });
          });

        document.addEventListener('contextmenu', e => {
          e.preventDefault();
          alert('Right-click disabled to protect our work.');
        });

        document.addEventListener('keydown', e => {
          if ((e.ctrlKey && e.shiftKey && e.key === 'I') || 
              (e.ctrlKey && e.key === 'u')) {
            e.preventDefault();
            alert('Developer tools disabled on this site.');
          }
        });
      });
    </script>
  </body>
</html>
